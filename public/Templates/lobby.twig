<div class="container">
<div class="row">
	<div class="col-md-12 text-center">
		<h1 class="lobby-title">Get ready to play, have fun!</h1>
	</div>
</div>
<div class="row lobby-members">
	{% for user in lobbyMates %}
		{% if user.steamId == leader.steamId %}
			<div class="col-md-3 player-card leader">
         <p class="leader-icon"><a href="#" data-tooltip="Iâ€™m the tooltip text.">Leader</a></p>
		{% elseif user.steamId == currentUser.steamId %}
			<div class="col-md-3 player-card currentUser">
		{% else %}
			<div class="col-md-3 player-card">
		{% endif %}
		{% include "playersummarycard.twig" %}
			</div>
	{% endfor %}

</div>

{% if leader.steamId == currentUser.steamId %}
	<input type="checkbox" name="dialog_state" id="dialog_state" class="dialog_state">

	<div id='dialog'>
		<label id="dlg-back" for="dialog_state"></label>
		<div id='dlg-wrap'>
			<h2 id='dlg-header'>You are the lobby leader!</h2>
			<div id='dlg-content'>It is now your responsibility to make sure a game is initiated through the Steam group provided.</div>
			<div id='dlg-prompt'>
        <label id="dlg-close" for="dialog_state"><div class='sub-btn'>Allright!</div></label>

			</div>
		</div>
	</div>

	<main id='main' class='main_area'>
		<div>
			<label id="trigger" for="dialog_state"></label>
		</div>
		<div id='console'></div>
	</main>
{% endif %}

<div class="row">
	<div class="col-md-12 lobby-button center">
		<a href="steam://friends/joinchat/{{ lobbyChatRoom }}"><button type="button" class="playnow-btn"><h1>Play!</h1></button></a><br>
    <br>
    <a href="?/Lobby/leaveLobby"><u>Leave :-(</u></a>
	</div>
</div>
</div>

<script>
document.getElementById('trigger').click();
</script>
