<div class="row profileheader">
  <div class="col-md-4 center">
    <img src="{{ user.imageL }}">
  </div>

  <div class="col-md-8">
    <div class="row">
      <div class="col-md-10">
          {% if user.isPrivateAcc %}
          <h3 style="display: inline-block;">{{ user.nickname }} [<span class="redTxt">private profile</span>]</h3>
          {% else %}
          <h3 style="display: inline-block;">{{ user.nickname }}</h3>
          {% endif %}
          <hr>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6 col-md-6">
        <ul>
          <li>Rank: <img src="{{ user.rankImg }}" style="width: 55px; height: 20px;"> </li>
          <li>Age: {{ user.age }}</li>
          <li>From: {{ user.country }} </li>
        </ul>
      </div>

      <div class="col-xs-6 col-md-6">
        <ul>
          <li>Rating: </li>
          <li>TA Games: </li>
	        <li>Team: </li>
        </ul>
      </div>
    </div>

  </div>
</div>

