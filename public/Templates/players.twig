<!-- Page header with filter -->
<div class="row"> <!--Add styles to class-->
  <div class="col-lg-12 page-header">
   <div class="row">
       <div class="col-lg-12"> <!--Add styles to class-->
           <h1>Players
             <small>Find players to play with</small>
             <small style="font-size:12px; margin-left:695px; cursor:pointer;" class="filter-toggle">FILTER &nabla;</small> <!--Add styles to class-->
           </h1>
       </div>
   </div>

   <div class="row show-filter" style="margin-bottom: 35px; margin-top:35px;">
         <form method="post" action="?/Players/filterUsers">

         <div class="col-lg-2">
            <select name="language">
              <option value="" type="checkbox">Language</option>
              <option value="swedish" type="checkbox">Swedish</option>
              <option value="english" type="checkbox">English</option>
              <option value="german" type="checkbox">German</option>
              <option value="danish" type="checkbox">Danish</option>
              <option value="norwegian" type="checkbox">Norwegian</option>
           </select>
          </div>

          <div class="col-lg-2">
            <select name="rank">
              <option value="" type="checkbox">Rank</option>
              <option value="silver_1" type="checkbox">SILVER I</option>
              <option value="silver_2" type="checkbox">SILVER II</option>
              <option value="silver_3" type="checkbox">SILVER III</option>
              <option value="silver_4" type="checkbox">SILVER IV</option>
              <option value="silver_elite" type="checkbox">SILVER ELITE</option>
              <option value="silver_elite_master" type="checkbox">SILVER ELITE MASTER</option>
              <option value="gold_nova_1" type="checkbox">GOLD NOVA I</option>
              <option value="gold_nova_2" type="checkbox">GOLD NOVA II</option>
              <option value="gold_nova_3" type="checkbox">GOLD NOVA III</option>
              <option value="gold_nova_master" type="checkbox">GOLD NOVA MASTER</option>
              <option value="master_guardian_1" type="checkbox">MASTER GUARDIAN I</option>
              <option value="master_guardian_2" type="checkbox">MASTER GUARDIAN II</option>
              <option value="master_guardian_elite" type="checkbox">MASTER GUARDIAN ELITE</option>
              <option value="distinguished_master_guardian" type="checkbox">DISTINGUISHED MASTER GUARDIAN</option>
              <option value="legendary_eagle" type="checkbox">LEGENDARY EAGLE</option>
              <option value="legendary_eagle_master" type="checkbox">LEGENDARY EAGLE MASTER</option>
              <option value="supreme_master_first_class" type="checkbox">SUPREME MASTER FIRST CLASS</option>
              <option value="the_global_elite" type="checkbox">GLOBAL ELITE</option>
           </select>
          </div>

          <div class="col-lg-2">
            <select name="hours">
              <option value="" type="checkbox">Hours played</option>
              <option value="100"  type="checkbox">100+</option>
              <option value="300"  type="checkbox">300+</option>
              <option value="500"  type="checkbox">500+</option>
              <option value="1000" type="checkbox">1000+</option>
           </select>
          </div>
          <!-- Search form for players nick -->
          <div class="col-lg-2">
            <input type="text" name="nick" placeholder="Enter player nick here...">
          </div>

          <input class="sub-btn" type="submit" value="Filter">
          </form>
         </div><!-- ROW END -->
  </div>
</div>
<!-- /.row -->

   <!-- Players Card -->
     <div class="row">
       {% for user in users %}
        {% include "playersummarycard.twig" %}
         {% endfor %}
     </div>
   <!-- /.row -->
