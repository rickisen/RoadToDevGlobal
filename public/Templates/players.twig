<!-- Page header with filter -->
<div style="margin:0px; padding:0px;" class="row"> <!--Add styles to class-->
  <div class="col-lg-12 page-header">
   <div class="row">
       <div style="padding:0px;" class="col-lg-12"> <!--Add styles to class-->
           <h1>Players
             <small>Find players to play with</small>
             <small style="font-size:12px; padding-left:695px;" class="filter-toggle">FILTER &nabla;</small> <!--Add styles to class-->
           </h1>
       </div>
   </div>
   <div class="row show-filter" style="margin-bottom: 35px; margin-top:35px;">
         <form method="post" action="?/Players/filterUsers">

         <div class="col-lg-2">
            <select name="language">
              <option value="" name="" type="checkbox">Language:</option>
              <option value="swedish"  type="checkbox">SWEDISH</option>
              <option value="english"  type="checkbox">ENGLISH</option>
              <option value="german" type="checkbox">GERMAN</option>
              <option value="norweigan" type="checkbox">NORWEIGAN</option>
           </select>
          </div>

          <div class="col-lg-2">
            <select name="rank">
              <option value="" type="checkbox">Rank</option>
              <option value="silver_1" type="checkbox">silver</option>
              <option value="silver_2" type="checkbox">gold</option>
              <option value="silver_3"  type="checkbox">global</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
              <option value="silver_4" type="checkbox">supreme</option>
           </select>
          </div>

          <div class="col-lg-2">
            <select name="hours">
              <option value="" type="checkbox">Hours played</option>
              <option value="100"  type="checkbox">100+</option>
              <option value="300"  type="checkbox">300+</option>
              <option value="500"  type="checkbox">500+</option>
              <option value="1000" type="checkbox">1000+</option>
           </select>
          </div>
          <input type="submit" value="Filter">
          </form>
         </div><!-- ROW END -->
  </div>
</div>
<!-- /.row -->

   <!-- Players Card -->
     <div class="row">
       {% for user in users %}
         <div class="col-md-3 portfolio-item" style="width: 225px; margin-bottom: 25px; margin-right: 9px;">
             <a href="?/Profile/displayuser/{{ user.steamId }}">
                 <img class="img-responsive" src="{{ user.imageL }}" alt="">
             </a>
             <h3 style="white-space: nowrap; text-overflow: ellipsis; overflow: hidden; margin: 10px 0px;">
                 <a href="?/Profile/displayuser/{{ user.steamId }}"> {{ user.nickname }}</a>
             </h3>
             <p>
                Rank: <img src="{{ user.rankImg }}" style="width: 55px; height: 20px;"><br>
                {% if user.isPrivateAcc == 1 %}
                  Private profile
                {% else %}
                  K/D Ratio: {{ user.kdRatio }}<br>
                  Hours played: {{ user.hoursPlayed }}<br>
                {% endif %}
             </p>
           </div>
         {% endfor %}
     </div>
   <!-- /.row -->
