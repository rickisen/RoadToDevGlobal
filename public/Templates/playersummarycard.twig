<!-- Players Card -->
<a href="?/Profile/displayuser/{{ user.steamId }}">
  <img class="img-responsive" src="{{ user.imageL }}" alt="">
</a>
<h3>
    <a href="?/Profile/displayuser/{{ user.steamId }}"> {{ user.nickname }}</a>
</h3>

    <img class="rankimg center" src="{{ user.rankImg }}" style="margin-bottom: 10px;">
  <p>
    {% if user.country != 0 %}
      {{ user.country }}
      <img src="{{ user.countryFlag }}" style="width: 20px; height: 20px; margin-left: 10px; margin-top: -4px;">
      {% else %}
      UNKNOWN
      <img src="http://s2.postimg.org/byyu3kh11/United_Nations.png" style="width: 20px; height: 20px; margin-left: 10px; margin-top: -4px;">
    {% endif %}
    <br>
  {% if user.isPrivateAcc == TRUE %}
    Private profile
    <br>
    <br>
    <br>
  {% else %}
    Hours played: {{ user.hoursPlayed }}<br>
    K/D Ratio: {{ user.kdRatio }}<br>
  {% endif %}
</p>
