  <div class="row" style="margin-top: 40px;">
    <div class="col-md-offset-2 col-md-2">
      <img src="{{ team.img }}" style="width: 150px; height: 150px;">
    </div>

    <div class="col-md-4">
      <h2>{{ team.name }}</h2>
      <br>
      <p>
        Members:
        {% for member in team.members %}
        {{member.nickname}}
        {% endfor %}
      </p>
      <p>
        Team bio: {{ team.descr }}
      </p>
      <p>
        Looking for members: {{ team.lookingForPlayers }}
      </p>
    </div>

    {% if currentUser.inTeam == team.id %}
      <div class="col-md-offset-1 col-md-2">
        <a href="?/TeamProfile/editTeam">Manage team</a>
      </div>
    {% endif %}
  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-6">
      <div class="row">
        {% for user in team.members %}
          <div class="col-md-2 player-mini">
            {% include 'playersummarymini.twig'%}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-8" style="margin-top: 40px;">
      <h3>Post on team wall</h3>
      {% if currentUser %}
      <form action="/index.php?" method="post">
        <input type="hidden" name="postHandler" value="receiveComments">
        <textarea rows="3" class="form-control" name="comment" placeholder="Got something to say?"></textarea><br>
        <p>You are posting as <u>{{ currentUser.nickname }}</u></p>
        <input type='hidden' name='team_id' value='{{team.id}}'>
        <button type="submit">Post</button>
      {% else %}
        <form>
        <textarea rows="3" class="form-control" name="" placeholder="You have to log in to make comments." disabled></textarea><br>
        <button type="submit" disabled>Post</button>
        </form>
      {% endif %}
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-8" style="margin-top: 40px;">
      {% for comment in team.comments %}
        <p style="display: inline-block;"><a href="?/Profile/displayuser/{{ comment.author }}"><u> {{ comment.nick }} </u> </a> </p>
        <p style="font-size: 10px; display: inline-block;"> {{ comment.date }} </p>
        <p> {{ comment.text }} </p>
        <hr>
      {% endfor %}
    </div>
  </div>

