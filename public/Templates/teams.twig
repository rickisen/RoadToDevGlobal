<!-- Page Heading -->
<div class="row"> <!--Add styles to class-->
  <div class="col-lg-12 page-header">
   <div class="row">
       <div class="col-lg-12"> <!--Add styles to class-->
           <h1>Teams
             <small>Find teams</small>
             <small class="filter-toggle">FILTER &nabla;</small> <!--Add styles to class-->
           </h1>
       </div>
   </div>

   <div class="row show-filter" style="margin-bottom: 35px; margin-top:35px;">
      <form method="post" action="?/Teams/filterTeams">

        <div class="col-lg-2">
          <select name="looking_for_players">
          <option value="" type="checkbox">Looking for players</option>
          <option value="yes" type="checkbox">Yes</option>
          <option value="no" type="checkbox">No</option>
          </select>
        </div>

        <!-- Search form for team names -->
        <div class="col-lg-2">
          <input type="text" name="team_name" placeholder="Enter team name here...">
        </div>

        <input class="sub-btn" type="submit" value="Filter">

      </form>
    </div><!-- ROW END -->
  </div>
</div><!-- /.row -->

<div class="row">
  {% for team in teams %}
    <div class="col-md-3 col-sm-6 hero-feature">
      {% include "teamsummarycard.twig" %}
    </div>
  {% endfor %}
</div>
